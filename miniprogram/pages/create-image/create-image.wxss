.create-form {
  padding-bottom: 60rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.form-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.toggle-text {
  font-size: 24rpx;
  color: var(--primary-color);
}

.form-textarea {
  background-color: #fff;
  border-radius: 12rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
}

.style-tag {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.example-prompts {
  display: flex;
  flex-direction: column;
}

.example-prompt {
  padding: 20rpx;
  margin-bottom: 16rpx;
  border-left: 6rpx solid var(--primary-color);
  background-color: rgba(0, 82, 217, 0.05);
  border-radius: 0 8rpx 8rpx 0;
  font-size: 28rpx;
} 