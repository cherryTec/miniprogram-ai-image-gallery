.container {
  padding-bottom: 120rpx;
}

.login-container {
  height: 100vh;
  padding: 32rpx;
}

.login-card {
  width: 100%;
  padding: 48rpx 32rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  margin: 0 auto 40rpx;
}

.welcome-text {
  margin-bottom: 60rpx;
}

.user-info {
  padding: 32rpx;
  margin: 24rpx;
  display: flex;
  align-items: center;
}

.user-details {
  margin-left: 24rpx;
}

.username {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.section {
  padding: 0 24rpx;
  margin-bottom: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
}

.empty-gallery {
  padding: 80rpx 0;
  min-height: 300rpx;
}

.mt-md {
  margin-top: 32rpx;
}

.settings-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
} 